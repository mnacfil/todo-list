model SubTask {
  id          String    @id @default(uuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  title       String
  author      User      @relation(fields: [authorId], references: [id])
  task        Task      @relation(fields: [taskId], references: [id])
  taskId      String
  authorId    String
  description String?
  dueDate     DateTime?
  priority    String?
  reminder    String?
  labels      String?
}

